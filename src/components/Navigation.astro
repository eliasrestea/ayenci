---
import Menu from './Menu.jsx';
---
<nav class="fixed inset-x-0 top-0 z-50 bg-black/20 text-stone-200">
  <div class="grid grid-cols-3 items-center px-6 py-4">

    <!-- Left links ── desktop only -->
    <div class="hidden md:flex justify-end space-x-6">
      <a href="#home"     class="hover:text-white transition">Home</a>
      <a href="#services" class="hover:text-white transition">Services</a>
    </div>

    <!-- Center logo ── always visible, always centered -->
    <div class="flex justify-center col-start-2">
      <span id="nav-logo"
            class="opacity-0 bg-gradient-to-br from-stone-50 to-stone-500 bg-clip-text text-transparent
                   text-3xl md:text-4xl font-light tracking-widest transition-all duration-500 ease-in-out">
        R S T
      </span>
    </div>

    <!-- Right links ── desktop only -->
    <div class="hidden md:flex justify-start space-x-6">
      <a href="#projects" class="hover:text-white transition">Projects</a>
      <a href="#contact"  class="hover:text-white transition">Contact</a>
    </div>

    <button id="nav-toggle"
            class="justify-self-end md:hidden p-2 -mr-2 focus:outline-none text-stone-400
                   transition-transform duration-300"
            aria-label="Open main menu" aria-expanded="false">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
           stroke-linecap="round" stroke-linejoin="round">
        <!-- We’ll swap this path in JS -->
        <path id="nav-icon" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>
</nav>

<!-- ======== BOTTOM SHEET (icons lighten on press) ======== -->
<div id="mobile-sheet"
     class="md:hidden fixed inset-x-0 bottom-0 z-40 transform translate-y-full
            opacity-0 pointer-events-none transition-all duration-300 ease-out
            bg-transparent">

  <ul class="flex justify-around text-stone-400">

    <!-- Home -->
    <li>
      <a href="#home" class="p-3 active:text-stone-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5"
             stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 9l9-7 9 7v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2Z"/>
        </svg>
      </a>
    </li>

    <!-- Services (briefcase) -->
    <li>
      <a href="#services" class="p-3 active:text-stone-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5"
             stroke-linecap="round" stroke-linejoin="round">
          <path d="M8.25 6.75V5.25a1.5 1.5 0 0 1 1.5-1.5h4.5a1.5 1.5 0 0 1 1.5 1.5v1.5"/>
          <rect x="3.75" y="6.75" width="16.5" height="11.5" rx="1.5"/>
          <path d="M3.75 12h16.5"/>
        </svg>
      </a>
    </li>

    <!-- Projects -->
    <li>
      <a href="#projects" class="p-3 active:text-stone-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5"
             stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2Z"/>
        </svg>
      </a>
    </li>

    <!-- Contact -->
    <li>
      <a href="#contact" class="p-3 active:text-stone-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5"
             stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="5" width="18" height="14" rx="2"/>
          <polyline points="3 7 12 13 21 7"/>
        </svg>
      </a>
    </li>

  </ul>
</div>

<Menu client:load />